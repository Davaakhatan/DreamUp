{
  "name": "dreamup-qa-agent-lambda",
  "version": "1.0.0",
  "description": "Lambda package configuration for DreamUp QA Agent",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:tsc && npm run build:bundle",
