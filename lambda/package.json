  "dependencies": {
    "@browserbasehq/sdk": "^1.1.1",
    "openai": "^4.20.1",
    "playwright-core": "^1.56.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  }
}

